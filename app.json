{
  "id": "com.wikipedia",
  "version": "2.0.0",
  "compatibility": ">=1.2.0",
  "category": "internet",
  "name": {
    "en": "Wikipedia",
    "nl": "Wikipedia"
  },
  "description": {
    "en": "Ask Homey to get you infromation from Wikipedia",
    "nl": "Vraag informatie op van Wikipedia"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "dependencies": {
  },
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:speech-input"
  ],
  "flow": {
    "triggers": [],
    "conditions": []
  },
  "speech": {   
    "en": {
      "element": {
        "verb": {
          "type": "regex",
          "value": "(look\\s?up|find|search(\\sfor)?|tell(\\sme|\\sus)?\\sabout)"
        },
        "wikipedia": {
          "type": "regex",
          "value": "((on\\s)?wikipedia|wiki)"
        },
        "query": {
          "type": "regex",
          "value": "[\\s\\S]+"
        }
      },
      "group": {
        "main": {
          "set": "(verb) && wikipedia && query",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true
        }
      }
    },  
    "nl": {
      "element": {
        "verb": {
          "type": "regex",
          "value": "(vind|zoek(\\snaar)?)(\\sinformatie(\\sover)?)?"
        },
        "wikipedia": {
          "type": "regex",
          "value": "((op\\s)?wikipedia|wiki)"
        },
        "query": {
          "type": "regex",
          "value": "[\\s\\S]+"
        }
      }
    }
  },
  "speechExamples": {
    "en": [ "Wikipedia personal assistent" ],
    "nl": [ "Wikipedia Encyclopedie" ]
  }
}