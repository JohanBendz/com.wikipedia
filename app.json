{
  "id": "com.wikipedia",
  "version": "2.0.0",
  "compatibility": ">=0.8.30",
  "category": "internet",
  "name": {
    "en": "Wikipedia",
    "nl": "Wikipedia"
  },
  "description": {
    "en": "Ask Homey to get you infromation from Wikipedia",
    "nl": "Vraag informatie op van Wikipedia"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "dependencies": {
  },
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:speech-input"
  ],
  "flow": {
    "triggers": [],
    "conditions": []
  },
  "speech": {   
    "en": {
      "element": {
        "verb": {
          "type": "regex",
          "value": "(look\\s?up|find|search(\\sfor)?|tell(\\sme|\\sus)?\\sabout)"
        },
        "wikipedia": {
          "type": "regex",
          "value": "((on\\s)?wikipedia|wiki)"
        },
        "query": {
          "type": "regex",
          "value": "[\\s\\S]+"
        }
      },
      "group": {
        "main": {
          "set": "(verb) && query",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true
        },
        "chunks": {
          "set": "VP || NP"
        }
      }
    }
  }
}